{
  "name": "likemusic/tennis-scores-grabber-xscores",
  "description": "Grabber for tennis scores from https://www.xscores.com/tennis/",
  "version": "1.0.0",
  "keywords": [
    "xscores.com",
    "tennis",
    "scrapper",
    "parser",
    "grabber",
    "scores"
  ],

  "license": "private",
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,

  "require": {
    "php": ">=7.1.0",
    "likemusic/tennis-scores-grabber-base": "dev-master"
  },

  "require-dev": {
    "phpunit/phpunit" : "^7",
    "likemusic/simple-http-client-file-get-contents": "@dev"
  },

  "repositories":[
    {
      "type": "vcs",
      "url": "git@github.com:likemusic/tennis-score-grabber.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:likemusic/simple-http-client-file-get-content.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:likemusic/simple-http-client.git"
    }
  ],

  "autoload": {
    "psr-4": {
      "TennisScoresGrabber\\XScores\\": "src/",
      "TennisScoresGrabber\\XScores\\Tests\\": "tests/"
    }
  }
}
